<launch>
  <arg name="kbd_teleop" default="false"/>
  <arg name="rqt_teleop" default="false"/>
  <arg name="visualize" default="true"/>
  <arg name="with_robot" default="true"/>
  <arg name="scenario" default="corridor_6people"/>

  <!-- Simulator -->
  <include file="$(find pedsim_simulator)/launch/simulator.launch">
    <arg name="kbd_teleop" value="$(arg kbd_teleop)"/>
    <arg name="rqt_teleop" value="$(arg rqt_teleop)"/>
    <arg name="with_robot" value="$(arg with_robot)"/>
    <arg name="scene_file" value="$(find pedsim_simulator)scenarios/$(arg scenario).xml"/>
    <arg name="max_robot_speed" value="1.5"/>
    <arg name="robot_mode" value="1"/>
    <arg name="enable_groups" value="false"/>
    <arg name="pose_initial_x" value="5.0"/>
    <arg name="pose_initial_y" value="5.0"/>
    <arg name="pose_initial_theta" value="0.7"/>
  </include>

  <!-- Map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find pedsim_simulator)scenarios/maps/$(arg scenario).yaml">
    <param name="frame_id" value="odom" />
  </node>

  <!-- Visualizer -->
  <include file="$(find pedsim_visualizer)/launch/visualizer.launch" if="$(arg visualize)"/>

  <param name="peds_state_topic" type="string" value="/pedsim_visualizer/tracked_persons" />
  <param name="grid_topic" type="string" value="/map" />
  <param name="robot_state_topic" type="string" value="/odometry/filtered" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pedsim_simulator)/rviz/social_contexts_activities.rviz" if="$(arg visualize)"/> 
</launch>
